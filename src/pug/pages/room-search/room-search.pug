                        +card({type: 'preview', roomNumber: '982', roomPrice: '5 800', roomComments: '56'})
                        +card({type: 'preview', roomNumber: '678', roomPrice: '5 500', roomComments: '45'})
                        +card({type: 'preview', roomNumber: '450', roomPrice: '5 300', roomComments: '39'})
                        +card({type: 'preview', roomNumber: '350', roomPrice: '5 000', roomComments: '77'})
                        +card({type: 'preview', roomNumber: '666', roomPrice: '5 000', roomComments: '25'})
                        +card({type: 'preview', roomNumber: '444', roomPrice: '5 000', roomComments: '15'})
