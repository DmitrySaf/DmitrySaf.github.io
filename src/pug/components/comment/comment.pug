include ../buttons/buttons

mixin comment(options)
    if !options 
        - var options = {}

    .comment 
        .comment__img 
            img(
                src = options.img 
                alt = options.alt)
        .comment__header
            .comment__name=options.name
            .comment__online=options.online
        .comment__like
            +button({type: 'like'})
        .comment__text
            .comment__feedback=options.feedback