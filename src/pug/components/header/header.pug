include ../buttons/buttons
include ../logo/logo
include ../social/social
include ./menu/menu

mixin header(options)
  if !options 
    - var options = {}

  header.header
    .container
      .header__wrapper
        +logo
        .header__menu(class = (options.logged === 'true') ? 'header__menu_logged' : '')
          +menu
          if (options.logged === 'true')
            .header__menu-user=options.username
          else
            +button({type: 'default', href: './login.html', hasBorder: true, size: 's', additClass: 'header__login-button', text: 'войти'})
            +button({type: 'default', href: './registration.html', size: 'm', additClass: 'header__register-button', text: 'зарегистрироваться'})
          .header__hamburger
            input#hamburger.header__hamburger-trigger(type="checkbox")
            label.header__hamburger-lines(for="hamburger")
              span
              span
              span
            .header__hamburger-content
              +menu({isHamburger: true})
              if (options.logged === 'true')
                .header__menu-user=options.username
              else
                +button({type: 'default', href: './login.html', size: 's', hasBorder: true,  additClass: 'header__login-button header__login-button_hamburger', text: 'войти'})
                +button({type: 'default', href: './registration.html', size: 'm',  additClass: 'header__register-button header__register-button_hamburger', text: 'зарегистрироваться'})
              +social()