include ../buttons/buttons
include ../logo/logo
include ../social/social

mixin header(options)
  if !options 
    - var options = {}

  header.header
    .container
      .header__wrapper
        +logo
        .header__menu_container(class = (options.logged === 'true') ? 'header__menu_container_logged' : '')
          nav.menu__nav 
            ul.menu__nav_list
              li
                a(href="#" class = 'menu__nav_item menu__nav_item_bold') О нас
              li
                a(href="#" class = 'menu__nav_item') Услуги
                .menu__nav_item_dropdown
              li
                a(href="#" class = 'menu__nav_item ') Вакансии
              li
                a(href="#" class = 'menu__nav_item ') Новости
              li
                a(href="#" class = 'menu__nav_item') Соглашения
                .menu__nav_item_dropdown
          if (options.logged === 'true')
            .header__menu_user=options.username
          else
            +button({type: 'default', href: './login.html', additClass: 'button_border header__login-button', text: 'войти'})
            +button({type: 'default', href: './registration.html', additClass: 'button_size_m button_color_primary header__register-button', text: 'зарегистрироваться'})
          .header__hamburger
            input#hamburger.header__hamburger_trigger(type = 'checkbox')
            label.header__hamburger_lines(for='hamburger')
              span.header__hamburger_line
              span.header__hamburger_line
              span.header__hamburger_line
            .header__hamburger_content
              nav.menu__nav.menu__nav_hamburger
                ul.menu__nav_list
                  li
                    a(href="#" class = 'menu__nav_item menu__nav_item_bold') О нас
                  li
                    a(href="#" class = 'menu__nav_item') Услуги
                    .menu__nav_item_dropdown
                  li
                    a(href="#" class = 'menu__nav_item ') Вакансии
                  li
                    a(href="#" class = 'menu__nav_item ') Новости
                  li
                    a(href="#" class = 'menu__nav_item') Соглашения
                    .menu__nav_item_dropdown
              if (options.logged === 'true')
                .header__menu_user=options.username
              else
                +button({type: 'default', href: './login.html', additClass: 'button_border header__login-button header__login-button_hamburger', text: 'войти'})
                +button({type: 'default', href: './registration.html', additClass: 'button_size_m button_color_primary header__register-button header__register-button_hamburger', text: 'зарегистрироваться'})
              +social()