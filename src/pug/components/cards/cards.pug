include ../input/input
include ../dropdown/dropdown
include ../buttons/buttons

mixin card(options)
    if !options
        -  var options = {}
        

    .card(class = options.cardClasses)
        if (options.type === 'book' || options.type === 'search' || options.type === 'login' || options.type === 'registration')
            if (options.type === 'book')
                .book__header_container 
                    .book__header_number <span>№ </span> #{options.roomNumber}
                    .book__header_price_container
                        h3.book__header_status=options.roomStatus
                        .book__header_price #{options.roomPrice} <span>в сутки</span> 
            else 
                div(class = `${options.type}__header`)=options.header 
            .card__content 
                if (options.type === 'book' || options.type === 'search')
                    .card__input_wrapper 
                        +input({additClass: 'input_size_s', type: 'date',label: 'прибытие',placeholder: 'ДД.ММ.ГГГГ', id: 'input__date_arrival', arrowId: 'input__arrow_arrival'})
                        +input({additClass: 'input_size_s', type: 'date',label: 'выезд',placeholder: 'ДД.ММ.ГГГГ', id: 'input__date_departure', arrowId: 'input__arrow_departure'})
                    +dropdown({type: 'guests', label: 'гости', placeholder: 'Сколько гостей'})
                    if (options.type === 'book')
                        div(class = `book__calc_container`)
                            div(class = `book__calc_wrapper`)
                                div(class = `book__calc_price_name`) 9 990₽ х 4 суток
                                div(class = `book__calc_price`) 39 960₽
                            div(class = `book__calc_wrapper`)
                                div(class = `book__calc_price_name book__calc_price_info`) Сбор за услуги: скидка 2 179₽
                                div(class = `book__calc_price`) 0₽
                            div(class = `book__calc_wrapper`)
                                div(class = `book__calc_price_name book__calc_price_info book__calc_price_line-height`) Сбор за дополнительные услуги
                                div(class = `book__calc_price`) 300₽
                            div(class = `book__calc_wrapper book__calc_wrapper_result`)
                                h2(class = `book__calc_result_name`) Итого
                                div(class = 'book__calc_dots')
                                h2(class = `book__calc_result_price`) 38 081₽
                if (options.type === 'login' || options.type === 'registration')
                    if (options.type === 'registration')
                        +input({type: 'text', placeholder: 'Имя', additClass: 'registration__input_name'})
                        +input({type: 'text', placeholder: 'Фамилия', additClass: 'registration__input_surname'})
                        .registration__gender_container.radio__container
                            +button({type: 'radio',id: 'man', name: 'gender', value: 'man', label: 'Мужчина'})
                            +button({type: 'radio',id: 'woman', name: 'gender', value: 'woman', label: 'Женщина'})
                        +input({type: 'text', placeholder: 'ДД.ММ.ГГГГ', label: 'дата рождения', additClass: 'input__date registration__input_date'}) 
                        h3.registration__user-info_header данные для входа в сервис
                    +input({type: 'email', placeholder: 'Email', additClass: 'registration__input_email'})
                    +input({type: 'text', placeholder: 'Пароль', additClass: 'registration__input_password'})
                    if (options.type === 'registration')
                        +button({type: 'toggle', label: 'Получать спецпредложения'})

                +button({type: 'default', id: 'click7', additClass: `button_color_primary button_size_l button_arrow ${options.type}__button`, text: options.buttonText})
                if (options.type === 'registration' || options.type === 'login')
                    .card__footer_container 
                        div(class = `${options.type}__footer_text`)=options.footerText 
                        +button({type: 'default', text: options.footerButtonText, additClass: 'button_border'})
        if (options.type === 'preview')
            .room-preview__slider
                    img(src="../assets/img/card-preview-luxe.png", alt="")
                    img(src="../assets/img/card-preview-standard.png", alt="")
                    img(src="../assets/img/card-preview-luxe.png", alt="")
                    img(src="../assets/img/card-preview-standard.png", alt="")
            .room-preview__content 
                .room-preview__header_container
                    .room-preview__header_number <span>№ </span> #{options.roomNumber}
                    .room-preview__header_wrapper
                        h3.room-preview__header_status=options.roomStatus
                        .room-preview__header_price #{options.roomPrice} <span>в сутки</span>
                .room-preview__feedback_container 
                    +button({type: 'rating'})
                    .room-preview__feedback <span>#{options.roomComments}</span> Отзывов

                        

