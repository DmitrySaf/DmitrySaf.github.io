mixin social 
  .social 
    a.social_twitter(href="http://twitter.com/")
      img(src=require("../../components/social/img/twitter.svg") alt="twitter")
    a.social_facebook(href="http://www.facebook.com/")
      img(src=require("../../components/social/img/facebook.svg") alt="facebook")
    a.social_instagram(href="http://instagram.com/")
      img(src=require("../../components/social/img/instagram.svg") alt="instagram")