mixin input({ size, isMasked, blockName, valueType, placeholder, type, label, sub, } = {})
  -
    const classes =
      [size && `input_size_${size} ` || 'input_size_l ']
      + [isMasked && 'js-input_masked ']

  .input__container
    if (label)
      h3.input__label= label
    .input__wrapper
      input.input(
        class=classes
        type=type
        placeholder=placeholder
        required=true
        id=id)
      if (type === 'email' && sub)
        .input__arrow-main
