mixin footer(options)
  if !options
    - const options = {}

  footer.footer 
    .footer__container
      .footer__main-content
        .footer__logo-container 
          +logo
          .footer__descr Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
        .footer__column
          h3.footer__list-title навигация
          ul.footer__list
            li 
              a.footer__link(href="#") О нас
            li 
              a.footer__link(href="#") Новости
            li 
              a.footer__link(href="#") Служба поддержки
            li 
              a.footer__link(href="#") Услуги
        .footer__column
          h3.footer__list-title  о нас
          ul.footer__list
            li
              a.footer__link(href="#") О сервисе
            li
              a.footer__link(href="#") Наша команда
            li
              a.footer__link(href="#") Вакансии
            li
              a.footer__link(href="#") Инвесторы
        .footer__column
          h3.footer__list-title Служба поддержки
          ul.footer__list
            li 
              a.footer__link(href="#") Соглашения
            li  
              a.footer__link(href="#") Сообщества
            li 
              a.footer__link(href="#") Связь с нами
        .footer__column
          h3.footer__list-title подписка
          .footer__column-descr Получайте специальные предложения и новости сервиса
          +input({type: 'email', placeholder: 'Email', sub: true, size: 'm', blockName: 'footer'})
      .footer__additionalContent 
        .footer__copyright Copyright © 2018 Toxin отель. Все права защищены.
        +social
