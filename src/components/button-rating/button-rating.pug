mixin button-rating(options)
  if !options
    - const options = {}

  -
    const {
      roomNumber,
      rating,
      starsNumber
    } = options;
  - const n = 1
  if !starsNumber
    - starsNumber = 5

  .button-rating
    while n <= starsNumber
      input.button-rating__star(
        name = roomNumber
        checked = (rating === n)
        value = n++
        type = "radio"
        disabled = "disabled"
      )
      span.button-rating__star_active