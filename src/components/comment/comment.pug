mixin comment({ imgName, name, online, feedback } = {})
  .comment
    .comment__img
      img(src=require(`../../components/comment/img/${imgName}.svg`) alt=imgName)
    .comment__header
      .comment__name= name
      .comment__online= online
    .comment__like
      +button-like
    .comment__text
      .comment__feedback= feedback
