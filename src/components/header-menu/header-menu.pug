mixin header-menu({ isHamburger } = {})
  - const links = require('../../components/header-menu/data/links-list.json')

  nav.menu__nav(class = isHamburger && 'menu__nav-hamburger')
    ul.menu__list
      each link in links
        -
          const {
            hasDropdown,
            bold,
            name,
            path,
            items
          } = link

        li
          if hasDropdown
            input.menu__link-checkbox(type="checkbox")
            .menu__link= name
            .menu__link-dropdown
            .menu__link-content
              each item in items
                a.menu__link(href=item.path) #{item.name}
          else
            a.menu__link(href=path)= name
