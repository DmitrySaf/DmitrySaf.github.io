mixin header-menu(options)
  if !options
   - var options = {}

  -
    const { isHamburger } = options
    const links = [
      {
        name: 'О нас',
        path: '#',
        bold: true
      },
      {
        name: 'Услуги',
        path: '#',
        hasDropdown: true,
        id: 'services',
        items: [
          {
            path: '#',
            name: 'Здесь'
          },
          {
            path: '#',
            name: 'Тестовые'
          },
          {
            path: '#',
            name: 'Значения'
          }
        ]
      },
      {
        name: 'Вакансии',
        path: '#',
      },
      {
        name: 'Новости',
        path: '#',
      },
      {
        name: 'Соглашения',
        path: '#',
        hasDropdown: true,
        id: 'agreements',
        items: [
          {
            path: '#',
            name: 'Здесь'
          },
          {
            path: '#',
            name: 'Тестовые'
          },
          {
            path: '#',
            name: 'Значения'
          }
        ]
      },
    ]

  nav.menu__nav(
    class = (isHamburger) ? 'menu__nav-hamburger' : ''
  )
    ul.menu__list
      each link in links 
        li
          if link.hasDropdown
            input(type="checkbox" class="menu__link-checkbox" id=link.id)
            label(for=link.id)
              a.menu__link(
                class = [link.bold && 'menu__link_bold']
                href=link.path
              )=link.name
              .menu__link-dropdown
              .menu__link-content 
                each item in link.items
                  a.menu__link(href=item.path) #{item.name}
          else
            a.menu__link(
              class = [link.bold && 'menu__link_bold']
              href=link.path
            )=link.name
