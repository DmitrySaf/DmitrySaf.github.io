mixin button-default(options)
  if !options
    - var options = {}

  -
    var classes = ''
    var attributes = {}
    classes += options.size ? `button_size_${options.size} ` : ''
    classes += options.hasBorder ? 'button_hollow ' : 'button_filled '
    classes += options.blockName ? `${options.blockName}__button ` : ''
    classes += options.specialClasses ? options.specialClasses : ''
    attributes = {
      class: classes,
      type: options.buttonType,
      form: options.formId,
      id: options.id,
      href: options.href ? options.href : '#'
    }

  if (options.href) 
    a.button&attributes(attributes)=options.text
  else
    button.button&attributes(attributes)=options.text