{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-undef": "off",
    "linebreak-style": ["error", "windows"],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "no-new": 0,
    "class-methods-use-this": 0
  }
}
